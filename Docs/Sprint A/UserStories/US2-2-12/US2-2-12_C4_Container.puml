node "Client Layer" {
  [UI / API Client] as Client
}

node "Web API" {
  [PhysicalResourcesController] as Ctl
}

node "Application / Repositories" {
  [PhysicalResourceRepository] as Repo
  [QualificationRepository] as QRepo
  [DockRepository / StorageAreaRepository] as AreaRepo
}

