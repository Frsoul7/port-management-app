# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Core Backend Integration
CORE_BACKEND_URL=http://localhost:5001
CORE_BACKEND_TIMEOUT=10000

# Prolog Planning Service Integration (for future use)
PLANNING_SERVICE_URL=http://localhost:5000
PLANNING_SERVICE_TIMEOUT=30000

# Database Configuration (MongoDB)
DATABASE_URL=mongodb://localhost:27017/oem
DATABASE_NAME=oem

# JWT Configuration (MUST match Core Backend secret)
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ISSUER=PortManagementSystem
JWT_EXPIRATION=24h

# Processing Time Calculation Constants
CONTAINER_HANDLING_TIME_MINUTES=2
SETUP_TIME_MINUTES=30

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/oem-backend.log

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# API Versioning
API_VERSION=v1
API_PREFIX=/api
